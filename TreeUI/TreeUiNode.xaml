<UserControl x:Class="HuffmanCompression.TreeUI.TreeUiNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HuffmanCompression.TreeUI"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance {x:Type local:TreeUiNode}}"
             d:DesignHeight="450" d:DesignWidth="800"
						 Width="60" Height="50" Margin="30, 20"
						 >
    <UserControl.Content>
			<Border Background="CornflowerBlue" BorderBrush="Black" BorderThickness="1">
				<StackPanel Orientation="Vertical">
					<TextBlock Text="{Binding NodeContent, Mode=OneWay}" FontSize="20" HorizontalAlignment="Center"/>
					<TextBlock Text="{Binding Id, Mode=OneWay}" FontSize="18" HorizontalAlignment="Center"/>
				</StackPanel>
			</Border>
		</UserControl.Content>
</UserControl>
